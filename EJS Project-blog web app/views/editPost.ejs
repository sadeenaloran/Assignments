<%- include("partials/header.ejs") %>
<div class="container px-1 my-3 p-2">
  <div class="fashion-card text-white p-2 rounded-top-3 d-flex justify-content-between">
    <h5>Edit Your Post</h5>
    <a href="/"><i class="bi bi-x-circle-fill text-white"></i></a>
  </div>
  <form action="/editpost/<%= post.id %>" class="border rounded-bottom-3 p-3" method="post">
    <div class="form-group mb-3">
      <label for="title" class="form-label">Title</label>
      <input
        name="title"
        type="text"
        value="<%= post.title %>"
        class="form-control"
        id="title"
        required
      />
    </div>
    <div class="form-group mb-3">
      <label for="content" class="form-label">Content</label>
      <textarea
        name="content"
        class="form-control"
        id="content"
        rows="6"
        required
      >
      <%= post.content %>
      </textarea>
    </div>
    <div class="form-group mb-3">
      <label for="author" class="form-label">Author</label>
      <input
        name="author"
        type="text"
        value="<%= post.author %>"
        class="form-control"
        id="author"
        required
      />
    </div>
    <div class="d-flex gap-2 justify-content-end">
      <a href="/" class="btn btn-secondary">Cancel</a>
      <button type="submit" class="btn btn-light createButton">Update Post</button>
    </div>
  </form>
</div>
</div>
<%- include("partials/footer.ejs") %>
